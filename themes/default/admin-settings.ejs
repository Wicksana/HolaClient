  <script>
function updateappearance() {
  const rotateSelect = document.getElementById('rotate');

  const nameValue = document.querySelector('#name').value;
  const logoValue = document.querySelector('#logo').value;
  const rotateValue = rotateSelect.value;
  const backgroundValue = document.querySelector('#background').value;
  const themeValue = document.querySelector('#theme').value;
  const websiteValue = document.querySelector('#website').value;

  const data = {
    name: nameValue,
    logo: logoValue,
    rotate: rotateValue,
    background: backgroundValue,
    theme: themeValue,
    website: websiteValue
  };

  const xhr = new XMLHttpRequest();
  xhr.open('POST', '/update-appearance');
  xhr.setRequestHeader('Content-Type', 'application/json');
  xhr.send(JSON.stringify(data));
  location.reload();
}
  </script>
    <script>
      function updatepurger() {
      
        const purgerSelect = document.getElementById('purger');

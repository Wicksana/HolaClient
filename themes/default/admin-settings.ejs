        const purgerenabledValue = purgerSelect.value;
      
        const data = {
          purgerenabled: purgerenabledValue,
          keyword: keywordValue,
        };
      
        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/update-purger');
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify(data));
        location.reload();
      }
        </script>
            <script>

<% if (req.query.err) { %>
    <div style="border-radius: 15px; color:white" class="alert">
                    <% if (req.query.err == "MISSINGCOUPONCODE") { %>
                        <i style="color:red" class="bi bi-exclamation-octagon"></i> You have to fill in a coupon code first!
                    <% } else if (req.query.err == "INVALIDCOUPONCODE") { %>
                        <i style="color:red" class="bi bi-exclamation-octagon"></i> This doesn't seem to work. Check if it's redeemed already!
                    <% } else if (req.query.err == "SUCCESSCOUPONCODE") { %>
                        <i style="color:greenyellow" class="bi bi-check2-circle"></i> Success!
                    <% } else { %>
                        Coupon failure.
                    <% } %>
                    </div>
                <% } %>
    <div>
      <div class="col-md-6 grid-margin stretch-card">
        <div>
          <div>
                            <form action="/coupon_redeem">
                                   <label style="color:white" for="code">Code:</label>
                                    <input style="border-radius: 15px; padding: 8px; background-color: rgba(165, 165, 165, 0.315); color: white; border-color: transparent;" type="text" class="form-control" placeholder="Enter your coupon code here" name="code">
                                    <br>
                                    <button style="background-color: gray; color:white" class="btn btn-lg">Redeem</button>
                            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>

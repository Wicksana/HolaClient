<% if (req.query.err) { %>
    <div style="border-radius: 15px; color:white" class="alert">
      <% if (req.query.err == "MISSINGFIELDS") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> Fill all fields!
      <% } else if (req.query.err == "CANNOTGIFTYOURSELF") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> You tried to gift yourself!
      <% } else if (req.query.err == "MUSTCOMPLETECAPTCHA") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> GO COMPLETE THE CAPTCHA,YOU NPC!
      <% } else if (req.query.err == "INVALIDCAPTCHARESPONSE") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> FBI OPEN UP! Incorrect captcha!
      <% } else if (req.query.err == "CANTAFFORD") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> You do not have enough coins! :/
      <% } else if (req.query.err == "USERDOESNTEXIST") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> ERROR: UserID not found!
      <% } else if (req.query.err == "TOOLOWCOINS") { %>
        <i style="color:red" class="bi bi-exclamation-octagon"></i> You must gift more than 1 coin!
      <% } %>
    </div>
  <% } else if (req.query.success) { %>
    <div class="alert" style="background-color: transparent; border-radius: 15px">
      <i style="color:greenyellow" class="bi bi-check2-circle"></i> Success! The coins have been transferred
    </div>
  <% } %>
